@model List<Hra.Colas.Datos.Ventanilla>

<div class="row">
    <div class="col s12 m12 l12">
        <div id="bordered-table" class="card card card-default scrollspy">
            <div class="card-content">
                <div class="card-title">
                    <div class="row">
                        <div class="col s8 m6 l10">
                            <h4 class="card-title">GESTIONAR VENTANILLAS</h4>
                        </div>
                        <div class="col s4 m6 l2">
                            <a class="btn-small blue right" href="@Url.Action("Mantener","Ventanilla", new { id=0})"><i class="material-icons left">add</i>Nuevo</a>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col s12">
                    </div>
                    <div class="col s12">
                        <table class="bordered">
                            <thead>
                                <tr>
                                    <th></th>
                                    <th>Denominación</th>
                                    <th>Bloque</th>
                                    <th>Usuario</th>
                                    <th>Servicio</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <a href="@Url.Action("Mantener","Ventanilla",new { id = item.Id })"><i class="material-icons">edit</i></a>
                                        </td>
                                        <td>@item.Denominacion</td>
                                        <td>@item.Bloque.Denominacion</td>
                                        <td>
                                            @if (item.Usuario != null)
                                            {
                                                @item.Usuario.NombreCompleto
                                            }
                                        </td>
                                        <td>
                                            @if (item.Servicio != null)
                                            {
                                                @item.Servicio.Denominacion
                                            }
                                        </td>

                                       
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script>

    </script>
}

